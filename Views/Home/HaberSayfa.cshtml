@model webprogodev2019.Models.ViewModel
@{
    ViewData["Title"] = "Haber Sayfası";
    Layout = "~/Views/Shared/_Layout.cshtml";    
}

    <header>
        <img style="width:100%" src="@Model.haberList[Convert.ToInt32(Model.index)].haber_resim" />
    </header>

    <!-- Portfolio Section -->
    <section class="page-section portfolio" id="portfolio">
        <div class="container">

            <!-- Portfolio Section Heading -->
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">@Model.haberList[Convert.ToInt32(Model.index)].haber_baslik</h2>

            <!-- Icon Divider -->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            <!-- Portfolio Grid Items -->
            <div class="row">
                @Model.haberList[Convert.ToInt32(Model.index)].haber_icerik
            </div>
        </div>
    </section>